<?xml version="1.0" encoding="utf-8"?>
<ContentDialog x:Class="AppGroup.SettingsDialog"
               xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
               xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
               CornerRadius="8"
               MinWidth="500"
              >

    <ContentDialog.Resources>
        <Thickness x:Key="ContentDialogPadding">0,0,0,0</Thickness>

        <!-- Custom styles for better consistency -->
        <Style x:Key="SettingsCardStyle" TargetType="Border">
            <Setter Property="Background" Value="{ThemeResource CardBackgroundFillColorDefaultBrush}"/>
            <Setter Property="BorderBrush" Value="{ThemeResource CardStrokeColorDefaultBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="5"/>
            <Setter Property="Padding" Value="20,16"/>
            <Setter Property="Margin" Value="0,0,0,2"/>
        </Style>

        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{ThemeResource TextFillColorPrimaryBrush}"/>
            <Setter Property="Margin" Value="0,20,0,12"/>
        </Style>
    </ContentDialog.Resources>

    <StackPanel Spacing="10" VerticalAlignment="Center" Background="{ThemeResource LayerOnMicaBaseAltFillColorSecondaryBrush}" CornerRadius="5" HorizontalAlignment="Stretch">
        <Grid Padding="10,0,5,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock x:Name="EditTitle" FontSize="20" Margin="10" VerticalAlignment="Center" FontWeight="SemiBold">
                Settings
            </TextBlock>
            <Button Click="CloseDialog" Grid.Column="1" Height="35" HorizontalAlignment="Right" Background="Transparent" BorderThickness="0">
                <FontIcon Glyph="&#xe711;" FontSize="15"/>
            </Button>
        </Grid>

        <ScrollViewer MaxHeight="450" VerticalScrollBarVisibility="Auto">
            <StackPanel Spacing="0" Margin="20,0,20,20">

                <!-- Application Section -->

                <Border Style="{StaticResource SettingsCardStyle}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" MinWidth="200"/>
                            <ColumnDefinition Width="50"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" VerticalAlignment="Center" Margin="0,0,20,0">
                            <TextBlock Text="Run at startup" 
                                     FontWeight="SemiBold"
                                     FontSize="14"
                                     TextWrapping="Wrap"/>
                            <TextBlock Text="Automatically start the application when Windows starts"
                                     FontSize="12"
                                     Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                     Margin="0,2,0,0"
                                     TextWrapping="Wrap"/>
                        </StackPanel>

                        <ToggleSwitch x:Name="StartupToggle"
                                    Grid.Column="1"
                                    IsOn="True"
                                    OnContent=""
                                    OffContent=""
                                    VerticalAlignment="Center"
                                   />
                    </Grid>
                </Border>

                <!-- System Tray Section -->

                <Border Style="{StaticResource SettingsCardStyle}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" MinWidth="200"/>
                            <ColumnDefinition Width="50"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" VerticalAlignment="Center" Margin="0,0,20,0">
                            <TextBlock Text="Show system tray icon" 
                                     FontWeight="SemiBold"
                                     FontSize="14"
                                     TextWrapping="Wrap"/>
                            <TextBlock Text="Display the application icon in the system tray"
                                     FontSize="12"
                                     Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                     Margin="0,2,0,0"
                                     TextWrapping="Wrap"/>
                        </StackPanel>

                        <ToggleSwitch x:Name="SystemTrayToggle" 
                                    Grid.Column="1"
                                    IsOn="True"
                                    OnContent=""
                                    OffContent=""
                                    VerticalAlignment="Center"
                                   />
                    </Grid>
                </Border>

                <Border Style="{StaticResource SettingsCardStyle}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" MinWidth="200"/>
                            <ColumnDefinition Width="50"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" VerticalAlignment="Center" Margin="0,0,20,0">
                            <TextBlock Text="Grayscale icon"
                                     FontWeight="SemiBold"
                                     FontSize="14"
                                     TextWrapping="Wrap"/>
                            <TextBlock Text="Show the tray icon in grayscale when the group is showing"
                                     FontSize="12"
                                     Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                     Margin="0,2,0,0"
                                     TextWrapping="Wrap"/>
                        </StackPanel>

                        <ToggleSwitch x:Name="GrayscaleIconToggle"
                                    Grid.Column="1"
                                    IsOn="False"
                                    VerticalAlignment="Center"
                                    OnContent=""
                                    OffContent=""
                                    Toggled="GrayScaleToggle_Toggled"
                                   />
                    </Grid>
                </Border>

                <!-- Updates Section -->
                <TextBlock Text="Updates" Style="{StaticResource SectionHeaderStyle}"/>

                <Border Style="{StaticResource SettingsCardStyle}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" MinWidth="200"/>
                            <ColumnDefinition Width="50"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" VerticalAlignment="Center" Margin="0,0,20,0">
                            <TextBlock Text="Check for updates on startup"
                                     FontWeight="SemiBold"
                                     FontSize="14"
                                     TextWrapping="Wrap"/>
                            <TextBlock Text="Automatically check for new versions when the app starts"
                                     FontSize="12"
                                     Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                     Margin="0,2,0,0"
                                     TextWrapping="Wrap"/>
                        </StackPanel>

                        <ToggleSwitch x:Name="UpdateCheckToggle"
                                    Grid.Column="1"
                                    IsOn="True"
                                    VerticalAlignment="Center"
                                    OnContent=""
                                    OffContent=""
                                   />
                    </Grid>
                </Border>

                <Border Style="{StaticResource SettingsCardStyle}">
                    <StackPanel>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" MinWidth="200"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" VerticalAlignment="Center" Margin="0,0,20,0">
                                <TextBlock Text="Check for updates"
                                         FontWeight="SemiBold"
                                         FontSize="14"
                                         TextWrapping="Wrap"/>
                                <TextBlock x:Name="UpdateStatusText"
                                         Text="Click to check for new versions"
                                         FontSize="12"
                                         Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                         Margin="0,2,0,0"
                                         TextWrapping="Wrap"/>
                            </StackPanel>

                            <Button x:Name="CheckUpdateButton"
                                    Grid.Column="1"
                                    Content="Check Now"
                                    Click="CheckUpdateButton_Click"
                                    VerticalAlignment="Center"
                                    Padding="16,8"/>
                        </Grid>

                        <InfoBar x:Name="UpdateInfoBar"
                                 IsOpen="False"
                                 Severity="Success"
                                 Title="Update Available"
                                 Margin="0,12,0,0"
                                 IsClosable="True">
                            <InfoBar.ActionButton>
                                <Button Content="Download" Click="DownloadUpdate_Click"/>
                            </InfoBar.ActionButton>
                        </InfoBar>
                    </StackPanel>
                </Border>

                <!-- About Section -->
                <TextBlock Text="About" Style="{StaticResource SectionHeaderStyle}"/>

                <Border Style="{StaticResource SettingsCardStyle}">
                    <StackPanel>
                        <TextBlock Text="AppGroup"
                                 FontWeight="SemiBold"
                                 FontSize="14"/>
                        <TextBlock x:Name="VersionText"
                                 Text="Version"
                                 FontSize="12"
                                 Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                 Margin="0,4,0,0"/>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>
    </StackPanel>
</ContentDialog>